@inject IToastService toastService;

<div class="flex items-center justify-center">
    <Modal Valid=""
           Cancel="Close"
           @ref="creationModal">
        <ToggleModalContent>
            <MPButton TypeBtn="MPButton.TypeButton.Valid">
                Create new money pot
            </MPButton>
        </ToggleModalContent>
        <ModalContent>
            <CreateForm MoneyPot="newMoneyPot"
                    OnMoneyPotCreated="OnMoneyPotCreated" />
        </ModalContent>
    </Modal>
</div>

@code {
    private Modal creationModal;
    private MoneyPotDto newMoneyPot;

    protected async Task OnMoneyPotCreated()
    {
        this.creationModal.Hide();
        toastService.ShowSuccess("Money pot created");
    }
}
